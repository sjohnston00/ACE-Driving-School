@model ACE_Driving_School.View_Models.AddInstructorNoteViewModel

@{
    ViewBag.Title = "AddInstructorNote";
}
<div class="container container-wrapper">
    <h2>Add Instructor Note</h2>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Note)
                <div class="Login-Textbox">
                    @Html.EditorFor(model => model.Note)
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(p => p.Instructor_Id)
            @Html.HiddenFor(p => p.Lesson_Id)

            <div class="form-group">
                    @Html.ActionLink("Back", "LessonDetails", "Lesson", new { Lesson_Id = Model.Lesson_Id},new { @class = "btn btn-red"})
                    <input type="submit" value="Add" class="btn btn-red" />

            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
